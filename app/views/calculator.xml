<Alloy>
	<Window title="Calculators" layout="vertical">
		
		<!--
	     -
	     -	The following code is for the CT Dosage Calculator
	     -
	     -->	       		 
		<Label id="dlpValueLabel" visible="false">Dose length product value (DLP):</Label>
		<TextField visible="false" id="dlpValueTextfield"></TextField>
				
		<!--assuming only 7 body parts.. Picker would be better for more choices but this is platform specific --> 
		<Label id="bodypartLabel" visible="false">Scanned body part:</Label>
		<TextField visible="false" id="bodyPartTextfield" editable="false" onClick="selectBodyPart"></TextField>
				
		<OptionDialog id="bodyPart" title="Select Body Part:" onClick="addBodypart">
			<!-- The Options tag sets the options property. -->
		    <Options>
			    <Option>Head</Option>
			    <Option>Neck</Option>
			    <Option>Chest</Option>	
			    <Option>Abdomen</Option>
			    <Option>Pelvis</Option>
			    <Option>Cancel</Option>
			    </Options>
		</OptionDialog>
				
		<Label id="ageRangeLabel" visible="false">Patient age range:</Label>
		<TextField visible="false" id="ageRangeTextfield" editable="false" onClick="selectAgeRange"></TextField>
				
		<OptionDialog id="ageRange" title="Select Patient Age Range:" onClick="addAgeRange">
	        <Options>
	          	 <Option>Less than 1 year</Option>
	          	 <Option>1-5 years</Option>
	          	 <Option>5-10 years</Option>
	          	 <Option>10-18 years</Option>
	          	 <Option>18+ years</Option>	
	           	 <Option>Cancel</Option>
	        </Options>	
	    </OptionDialog>
				
		<Button id="ctCalcButton" visible="false" onClick="calculateDosage">Submit</Button>
				
		<Label id="resultLabel"></Label>
		
		
		<!--
	     -
	     -	The following code is for the Nuclear Medicine Calculator
	     -
	     -->	       		 
		
		<Label id="examChosenLabel" visible="false" >Examination/Investigation Chosen:</Label>
		<TextField id="examChosenTextfield" visible="false" onClick = "nuclearMedicine" editable="false"></TextField>
		
		<Label id="adminActivityLabel" visible="false" >Administered Activity (MBq):</Label>
		<TextField id="adminActivityTextfield" visible="false"></TextField>
		
		<Label id="effectDoseLabel" visible="false" >Effective Dose (mSv):</Label>
		<TextField id="effectDoseTextfield" visible="false" editable="false"></TextField>
	</Window>
</Alloy>