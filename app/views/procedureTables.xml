<Alloy>
	<Window title="Procedure Tables">

		<Label id="procedureLabel" ></Label>
  		<Button id="procedureButton" onClick="chooseProcedure">Procedures</Button>
  		
  		<OptionDialog id="procedureOptions" title="Select Investigation/Procedure:" onClick="addProcedure">
         	   <!-- The Options tag sets the options property. -->
	    	<Options>
	       	    <Option>Radiography</Option>
	       	    <Option>CT</Option>
	       	    <Option>Interventional Radiology</Option>
	       	    <Option>Dental Radiography</Option>
	       	    <Option>Nuclear Medicine</Option>
	     		<Option>Cancel</Option>
	    	</Options>		
	    </OptionDialog>
  		
  		
		<Label id="instructionLabel" >Choose a procedure</Label>
		<TableView id="procedureTable" visible="false"></TableView>

	</Window>
</Alloy>




