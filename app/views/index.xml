<Alloy>
	<TabGroup>
		<Tab id="tabChapters" title="Home" icon="KS_nav_ui.png">
			<Window title="Home" id="win">
				<TableView id="table" onClick="sectionsWindow"></TableView>
			</Window>
		</Tab>

		
		<Tab title="Info" icon="KS_nav_views.png">
			<Window title="Info">
				<Label>Information about how to use the app.</Label>
			</Window>
		</Tab>
		
		<Tab title="Preferences" icon="KS_nav_views.png">
			<Window id="win" title="Preferences" layout="vertical">
				<Button id="largeFont" onClick = "changeFontLarge">Change Font</Button>
				<Button onClick="checkForUpdates">Check for updates</Button>
			</Window>
		</Tab>
		
		
		<Tab title="Tools" id="tools" icon="KS_nav_views.png">
			<Window title="Average Radiation Doses">
				
				<ImageView id="proceduresImage" onClick="procedures" image="/images/procedures.jpg" />
				<ImageView id="ctImage" onClick="ctCalculator" image="images/ctCalculator.jpg" />
				<ImageView id="nuclearImage" onClick="nucCalculator" image="/images/nuclearCalculator.jpg" />
				
				 <!--<TableView id="procedureTable"></TableView> -->

			</Window>
